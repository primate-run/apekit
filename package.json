{
  "name": "apekit",
  "version": "0.0.39",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/primate-run/apekit.git"
  },
  "scripts": {
    "publish": "pnpm publish --otp=$(bw get totp npmjs.com)",
    "build": "npm run clean && tsc && cp tsconfig.json lib/tsconfig.json",
    "clean": "rm -rf ./lib",
    "lint": "eslint .",
    "prepublishOnly": "npm run build",
    "test": "npm run build && npx proby"
  },
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.json",
    "/lib/**/*.d.ts",
    "!/**/*.spec.*"
  ],
  "bin": {
    "apekit": "lib/bin.js"
  },
  "license": "MIT",
  "dependencies": {
    "@eslint/js": "^9.37.0",
    "@rcompat/args": "^0.8.0",
    "@rcompat/assert": "^0.3.1",
    "@rcompat/package": "^0.22.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/node": "^24.7.0",
    "eslint": "^9.37.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0"
  },
  "type": "module",
  "exports": {
    "./lint": "./lib/eslint.config.js",
    "./lint/app": "./lib/eslint.app.config.js",
    "./tsconfig": "./lib/tsconfig.json"
  }
}
